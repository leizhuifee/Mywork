@using MyWorkManager.Models;
@model MyWorkManager.viewModels.TicketQueryDetail;
@{ ViewBag.Title = "明细查询";}


<div class="container">

    <form class="form-inline" asp-controller="TicketQuery" asp-action="TicketQueryDetails">
        <div class="form-group">
            <label for="startime">起始时间:</label>
            <input type="date" class="form-control" id="startime" value="" asp-for="@Model.ticketQueries[0].StarTime">
        </div>
        <div class="form-group">
            <label for="endtime">截至时间:</label>
            <input type="date" class="form-control" id="endtime" value="" asp-for="@Model.ticketQueries[0].endTime">
        </div>
        <div class="form-group">
            <label for="Paypath">支付方式:</label>
            <select type="date" class="form-control" id="Paypath" value="" asp-for="@Model.ticketQueries[0].Paypath" asp-items="Html.GetEnumSelectList<TicketPaypath>()">
                <option>全部</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Colour">颜色:</label>
            <select type="date" class="form-control" id="Colour" value="" asp-for="@Model.ticketQueries[0].Colour">
                <option>全部</option>
                <option>黄色</option>
                <option>红色</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Type">类型:</label>
            <select type="date" class="form-control" id="Type" value="" asp-for="@Model.ticketQueries[0].Type">
                <option>全部</option>
                <option>出库</option>
                <option>入库</option>
            </select>
        </div>
        

        <button type="submit" class="btn btn-default">查询</button>
    </form>

    <table class="table table-bordered" id="ticketnumber">

        <tr>
            <th>日期</th>
            <th>颜色</th>
            <th>面值</th>
            <th>数量</th>
            <th>金额</th>
            <th>类型</th>
            <th>领用人</th>
            <th>支付方式</th>

        </tr>


    </table>
    <script>
        var time = new Date();
        $("#startime").val(time.toJSON().substring(0, 10));
        $("#endtime").val(time.toJSON().substring(0, 10));

    </script>
</div>
