@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>;


<div class="container">
   
    <table class="table table-bordered" id="ticketnumber">

        <tr style="text-align: center">
            <th>序号</th>
            <th>编号</th>
            <th>用户名</th>

            <th colspan="3">
                <div class="col-md-4">操作</div>
            </th>
        </tr>
        @{
            int i = 0;
            foreach (var item in Model)
            {
                i = i+1;
               
                <tr >
                    <th>@i</th>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td><a class="btn btn-primary" asp-controller="User" asp-action="UpDataUser" asp-route-Id="@item.Id">修改</a></td>
                     <td><a class="btn btn-primary" asp-controller="User" asp-action="EditRolesToUser" asp-route-Id="@item.Id">添加角色</a></td>
                    <td><a class="btn  btn-danger"asp-controller="User" asp-action="DeleteUser" asp-route-Id="@item.Id">删除</a></td>

                </tr>
               
            }
           

        }
       
    </table>
  
</div>