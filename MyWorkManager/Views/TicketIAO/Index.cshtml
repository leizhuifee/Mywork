@using MyWorkManager.Models;
@model Ticket;
@{ Layout = null;}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>饭票出入库</title>
    <!-- Bootstrap core CSS -->
    <link href="../bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <script src="~/bootstrap/dist/js/jquery-3.5.1.min.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
    <style>
        .backcolour{background-color:#ffd800 @*@ViewBag.backcolour*@}
    </style>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#SumMoneny").click(function () {
                var type = $("#inputText3").val()
                var number = $("#Number").val()
                $("#SumMoneny").val(type * number)


            });

            $("#HappenName").click(function () {
                var type = $("#inputText3").val()
                var SumMoneny = $("#SumMoneny").val()

                $("#Number").val(SumMoneny / type)

            });


        });
    </script>

</head>
<body>
    <div class="container">

        <div>
            <div class="page-header">
                <h1> <small></small></h1>
            </div>
        </div>
        <div class="container">


            <form class="form-horizontal" asp-controller="TicketIAO" asp-action="Index" method="post">

                <div class="form-group">
                    <label asp-for="Colour" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control backcolour " id="Colour" readonly asp-for="Colour" value=@Model.Colour>
                        <span asp-validation-for="Colour" style="color:red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">面值</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputText3" readonly asp-for="TicketValue" value=@Model.TicketValue>
                        <span asp-validation-for="TicketValue" style="color:red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">数量</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Number" asp-for="Number">
                        <span asp-validation-for="Number" style="color:red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">金额</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="SumMoneny" asp-for="SumMoneny">
                        <span asp-validation-for="SumMoneny" style="color:red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">类型</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Type" asp-for="Type" value=@Model.Type readonly>
                        <span asp-validation-for="Type" style="color:red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="HappenName" class="col-sm-2 control-label">领用人</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="HappenName" asp-for="HappenName">
                         <span asp-validation-for="HappenName"  style="color:red"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">支付方式</label>
                    <div class="col-sm-10">
                        <select  class="form-control" id="Paypath" asp-for="Paypath" asp-items="Html.GetEnumSelectList<TicketPaypath>()"></select>
                        @*<input type="text" class="form-control" id="Paypath" asp-for="Paypath">*@
                        <span asp-validation-for="Paypath" style="color: red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">确认</button>
                        <a  asp-controller="Home" asp-action="Index" class="btn btn-primary">取消</a>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
    <script type="text/javascript">
        var type = $("#inputText3").val()
        if (type == 0.5) {
            $("input").css("background-color", "#ffd800");
            $("h1").html("黄色");

        } else if (type == 1) {
            $("input").css("background-color", "#E6421A");
            $("h1").html("红色");
        };



    </script>
</body>
</html>